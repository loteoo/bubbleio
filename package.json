{
  "version": "1.0.0",
  "name": "hyperapp-boilerplate",
  "description": "Hyperapp PWA boilerplate",
  "author": "Alexandre Lotte",
  "license": "MIT",
  "scripts": {
    "start": "parcel src/index.html --open",
    "build": "parcel build ./src/index.html --no-source-maps --detailed-report --no-content-hash",
    "with_file_server": "parcel build ./src/server/with_file_server.js --target node --no-minify --no-source-maps --detailed-report --no-content-hash && node ./dist/with_file_server.js",
    "server": "parcel build ./src/server.js --target node --no-minify --no-source-maps --detailed-report --no-content-hash && node ./dist/server.js"
  },
  "dependencies": {
    "hyperapp": "github:jorgebucaran/hyperapp#V2",
    "hyperapp-render": "^3.0.0"
  },
  "devDependencies": {
    "autoprefixer": "^9.4.3",
    "babel-eslint": "^10.0.1",
    "eslint": "^5.12.1",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-fp": "^2.3.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-node": "^8.0.1",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-standard": "^4.0.0",
    "hygen": "^2.1.1",
    "parcel-bundler": "^1.11.0",
    "postcss-nested": "^4.1.1",
    "rucksack-css": "^1.0.2"
  }
}
